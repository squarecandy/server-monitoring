{
  "title": "Square Candy - Site Drill Down",
  "tags": ["squarecandy", "sites", "drilldown"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 2,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "domain",
          "type": "query",
          "query": "label_values(sqcdy_site_disk_bytes, domain)",
          "current": {},
          "refresh": 1,
          "includeAll": false,
          "multi": false,
          "sort": 1
        }
      ]
    },
    "panels": [
      {
        "title": "Disk Utilization (GB)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sqcdy_site_disk_bytes{domain=\"$domain\"} / 1024 / 1024 / 1024",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Traffic: Requests per Minute",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sqcdy_site_requests_per_minute{domain=\"$domain\"}",
            "legendFormat": "Requests/min",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqpm"
          }
        }
      },
      {
        "title": "Traffic: MB per Minute",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sqcdy_site_bytes_per_minute{domain=\"$domain\"} / 1024 / 1024",
            "legendFormat": "MB/min",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MBs"
          }
        }
      },
      {
        "title": "Top IPs (Last 15 Minutes)",
        "type": "table",
        "gridPos": {"h": 10, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "topk(20, sqcdy_site_top_ip_requests{domain=\"$domain\"})",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "domain": true},
              "renameByName": {
                "ip": "IP Address",
                "Value": "Requests"
              }
            }
          }
        ]
      },
      {
        "title": "Top User Agents (Last 15 Minutes)",
        "type": "table",
        "gridPos": {"h": 10, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "topk(20, sqcdy_site_top_user_agent_requests{domain=\"$domain\"})",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "domain": true},
              "renameByName": {
                "user_agent": "User Agent",
                "Value": "Requests"
              }
            }
          }
        ]
      },
      {
        "title": "Top URLs (Last 15 Minutes)",
        "type": "table",
        "gridPos": {"h": 10, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "topk(20, sqcdy_site_top_url_requests{domain=\"$domain\"})",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "domain": true},
              "renameByName": {
                "url": "URL",
                "Value": "Requests"
              }
            }
          }
        ]
      },
      {
        "title": "HTTP Status Codes",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 26},
        "targets": [
          {
            "expr": "sqcdy_site_status_code_total{domain=\"$domain\"}",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "title": "Last Backup",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 26},
        "targets": [
          {
            "expr": "sqcdy_site_backup_timestamp{domain=\"$domain\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dateTimeFromNow",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 86400, "color": "yellow"},
                {"value": 172800, "color": "green"}
              ]
            }
          }
        }
      }
    ]
}
