{
  "title": "Square Candy - Log Viewer",
  "uid": "sqcdy-log-viewer",
  "tags": ["squarecandy", "logs"],
  "links": [
    {"title": "Server Overview", "type": "link", "url": "/d/sqcdy-server-overview", "keepTime": true, "includeVars": true, "icon": "cloud"},
    {"title": "Site Metrics", "type": "link", "url": "/d/sqcdy-site-drilldown", "keepTime": true, "includeVars": true, "icon": "dashboard"},
    {"title": "User Metrics", "type": "link", "url": "/d/sqcdy-user-metrics", "keepTime": true, "includeVars": true, "icon": "info"},
    {"title": "Log Viewer", "type": "link", "url": "/d/sqcdy-log-viewer", "keepTime": true, "includeVars": true, "icon": "doc"}
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "server",
        "type": "query",
        "query": "label_values(sqcdy_sites_total, instance)",
        "current": {},
        "refresh": 1,
        "includeAll": true,
        "multi": false,
        "sort": 1
      },
      {
        "name": "domain",
        "type": "query",
        "query": "label_values(sqcdy_site_disk_bytes{instance=~\"$server\"}, domain)",
        "current": {},
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "sort": 1
      },
      {
        "name": "status",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "grafanacloud-squarecandy-logs"
        },
        "query": "label_values({job=~\"access-logs|error-logs\"}, status_range)",
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "title": "Log Volume by Status Code",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 0},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "sum by (status_range) (rate({job=\"access-logs\",instance=~\"$server\",domain=~\"$domain\",status_range=~\"$status\"} [1m]))",
          "legendFormat": "{{status_range}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "fillOpacity": 10,
            "spanNulls": true
          }
        }
      }
    },
    {
      "title": "All Logs (Access + Error)",
      "type": "logs",
      "gridPos": {"h": 34, "w": 24, "x": 0, "y": 6},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "{job=~\"access-logs|error-logs\",instance=~\"$server\",domain=~\"$domain\",status_range=~\"$status\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      }
    }
  ]
}
