{
  "title": "Square Candy - Log Viewer",
  "uid": "sqcdy-log-viewer",
  "tags": ["squarecandy", "logs"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "server",
        "type": "query",
        "query": "label_values(sqcdy_site_disk_bytes, instance)",
        "current": {},
        "refresh": 1,
        "includeAll": true,
        "multi": false,
        "sort": 1
      },
      {
        "name": "domain",
        "type": "query",
        "query": "label_values(sqcdy_site_disk_bytes{instance=~\"$server\"}, domain)",
        "current": {},
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "sort": 1
      },
      {
        "name": "status",
        "type": "custom",
        "query": "200,201,204,301,302,304,400,401,403,404,500,502,503",
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "includeAll": true,
        "multi": true,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "title": "Access Logs",
      "type": "logs",
      "gridPos": {"h": 14, "w": 24, "x": 0, "y": 30},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "{job=\"access-logs\",instance=~\"$server\",domain=~\"$domain\",status=~\"$status\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    },
    {
      "title": "Log Volume by Status Code",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 0},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "sum by (status) (rate({job=\"access-logs\",instance=~\"$server\",domain=~\"$domain\"}[1m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "fillOpacity": 10,
            "spanNulls": true
          }
        }
      }
    },
    {
      "title": "Top URLs (from logs)",
      "type": "table",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 0},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "topk(20, sum by (url) (count_over_time({job=\"access-logs\",instance=~\"$server\",domain=~\"$domain\",status=~\"$status\"} | regexp `\\\"(?P<method>\\\\S+) (?P<url>\\\\S+) ` | __error__=\"\" [$__range])))",
          "refId": "A",
          "instant": true,
          "legendFormat": "{{url}}"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "url": "URL",
              "Value #A": "Hits"
            }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "sort": [
              {
                "field": "Hits",
                "desc": true
              }
            ]
          }
        }
      ]
    },
    {
      "title": "Error Logs",
      "type": "logs",
      "gridPos": {"h": 20, "w": 24, "x": 0, "y": 10},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "{job=\"error-logs\",instance=~\"$server\",domain=~\"$domain\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ]
}
