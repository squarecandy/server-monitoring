{
  "title": "Square Candy - Log Viewer",
  "uid": "sqcdy-log-viewer",
  "tags": ["squarecandy", "logs"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "domain",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "grafanacloud-squarecandy-logs"
        },
        "query": {
          "label": "domain",
          "refId": "LokiVariableQueryEditor-VariableQuery",
          "stream": "{job=\"access-logs\"}",
          "type": 1
        },
        "current": {},
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "sort": 1,
        "allValue": ".*"
      },
      {
        "name": "status",
        "type": "custom",
        "query": "200,201,204,301,302,304,400,401,403,404,500,502,503",
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "includeAll": true,
        "multi": true,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "title": "Access Logs",
      "type": "logs",
      "gridPos": {"h": 14, "w": 24, "x": 0, "y": 30},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "{job=\"access-logs\",domain=~\"$domain\"} | regexp ` (?P<status>\\\\d{3}) ` | status=~\"$status\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    },
    {
      "title": "Log Volume by Status Code",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "sum by (status) (rate({job=\"access-logs\",domain=~\"$domain\"} | regexp ` (?P<status>\\\\d{3}) ` [1m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "fillOpacity": 10,
            "spanNulls": true
          }
        }
      }
    },
    {
      "title": "Error Logs",
      "type": "logs",
      "gridPos": {"h": 20, "w": 24, "x": 0, "y": 10},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "{job=\"error-logs\",domain=~\"$domain\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ]
}
