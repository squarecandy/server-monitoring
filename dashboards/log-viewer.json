{
  "title": "Square Candy - Log Viewer",
  "uid": "sqcdy-log-viewer",
  "tags": ["squarecandy", "logs"],
  "links": [
    {"title": "Server Overview", "type": "link", "url": "/d/sqcdy-server-overview", "keepTime": true, "includeVars": true, "icon": "cloud"},
    {"title": "User Metrics", "type": "link", "url": "/d/sqcdy-user-metrics", "keepTime": true, "includeVars": true, "icon": "info"},
	{"title": "Site Metrics", "type": "link", "url": "/d/sqcdy-site-drilldown", "keepTime": true, "includeVars": true, "icon": "dashboard"},
    {"title": "Log Viewer", "type": "link", "url": "/d/sqcdy-log-viewer", "keepTime": true, "includeVars": true, "icon": "doc"}
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "server",
        "type": "query",
        "query": "label_values(sqcdy_sites_total, instance)",
        "current": {},
        "refresh": 1,
        "includeAll": true,
        "multi": false,
        "sort": 1
      },
      {
        "name": "domain",
        "type": "query",
        "query": "label_values(sqcdy_site_disk_bytes{instance=~\"$server\"}, domain)",
        "current": {},
        "refresh": 2,
        "includeAll": true,
        "multi": false,
        "allValue": ".*",
        "sort": 1
      },
      {
        "name": "status",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "grafanacloud-squarecandy-logs"
        },
        "query": "label_values({job=~\"access-logs|error-logs\",status_range!=\"\"}, status_range)",
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "sort": 1
      },
      {
        "name": "search",
        "type": "textbox",
        "label": "Search",
        "description": "Filter logs by text content (case-insensitive regex)",
        "current": {
          "value": ""
        }
      }
    ]
  },
  "panels": [
    {
      "title": "Log Volume by Status Code",
      "type": "timeseries",
      "gridPos": {"h": 5, "w": 12, "x": 0, "y": 0},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "sum by (status_range) (rate({job=\"access-logs\",instance=~\"$server\",domain=~\"$domain\",status_range=~\"$status\"} [$__interval]))",
          "legendFormat": "{{status_range}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "fillOpacity": 10,
            "spanNulls": true
          }
        }
      }
    },
    {
      "title": "Matching Log Count",
      "type": "stat",
      "gridPos": {"h": 5, "w": 12, "x": 12, "y": 0},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"access-logs\",instance=~\"$server\",domain=~\"$domain\",status_range=\"2xx\"} |~ \"(?i)$search\" [$__range]))",
          "legendFormat": "2xx",
          "refId": "A"
        },
        {
          "expr": "sum(count_over_time({job=\"access-logs\",instance=~\"$server\",domain=~\"$domain\",status_range=\"3xx\"} |~ \"(?i)$search\" [$__range]))",
          "legendFormat": "3xx",
          "refId": "B"
        },
        {
          "expr": "sum(count_over_time({job=\"access-logs\",instance=~\"$server\",domain=~\"$domain\",status_range=\"4xx\"} |~ \"(?i)$search\" [$__range]))",
          "legendFormat": "4xx",
          "refId": "C"
        },
        {
          "expr": "sum(count_over_time({job=\"access-logs\",instance=~\"$server\",domain=~\"$domain\",status_range=\"5xx\"} |~ \"(?i)$search\" [$__range]))",
          "legendFormat": "5xx",
          "refId": "D"
        },
        {
          "expr": "sum(count_over_time({job=\"error-logs\",instance=~\"$server\",domain=~\"$domain\"} |~ \"(?i)$search\" [$__range]))",
          "legendFormat": "Error",
          "refId": "E"
        },
        {
          "expr": "sum(count_over_time({job=~\"access-logs|error-logs\",instance=~\"$server\",domain=~\"$domain\"} |~ \"(?i)$search\" [$__range]))",
          "legendFormat": "Total",
          "refId": "F"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "2xx"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}},
              {
                "id": "links",
                "value": [
                  {
                    "title": "View 2xx logs",
                    "url": "/d/sqcdy-log-viewer?var-server=${server}&var-domain=${domain}&var-status=2xx&var-search=${search}&${__url_time_range}"
                  }
                ]
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "3xx"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}},
              {
                "id": "links",
                "value": [
                  {
                    "title": "View 3xx logs",
                    "url": "/d/sqcdy-log-viewer?var-server=${server}&var-domain=${domain}&var-status=3xx&var-search=${search}&${__url_time_range}"
                  }
                ]
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "4xx"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}},
              {
                "id": "links",
                "value": [
                  {
                    "title": "View 4xx logs",
                    "url": "/d/sqcdy-log-viewer?var-server=${server}&var-domain=${domain}&var-status=4xx&var-search=${search}&${__url_time_range}"
                  }
                ]
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "5xx"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}},
              {
                "id": "links",
                "value": [
                  {
                    "title": "View 5xx logs",
                    "url": "/d/sqcdy-log-viewer?var-server=${server}&var-domain=${domain}&var-status=5xx&var-search=${search}&${__url_time_range}"
                  }
                ]
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Error"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}},
              {
                "id": "links",
                "value": [
                  {
                    "title": "View error logs",
                    "url": "/d/sqcdy-log-viewer?var-server=${server}&var-domain=${domain}&var-status=error&var-search=${search}&${__url_time_range}"
                  }
                ]
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Total"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "text"}}]
          }
        ]
      },
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "textMode": "value_and_name",
        "orientation": "vertical",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "text": {
          "titleSize": 16,
          "valueSize": 28
        }
      }
    },
    {
      "title": "All Logs (Access + Error)",
      "type": "logs",
      "gridPos": {"h": 35, "w": 24, "x": 0, "y": 5},
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-squarecandy-logs"
      },
      "targets": [
        {
          "expr": "{job=~\"access-logs|error-logs\",instance=~\"$server\",domain=~\"$domain\",status_range=~\"$status\"} |~ \"(?i)$search\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      }
    }
  ]
}
