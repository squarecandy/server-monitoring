{
  "title": "Square Candy - Site Comparison",
  "tags": ["squarecandy", "sites", "comparison"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 3,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "title": "Disk Utilization by Site (GB)",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "topk(20, sqcdy_site_disk_bytes / 1024 / 1024 / 1024)",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "calcs": ["lastNotNull", "max"]
          }
        }
      },
      {
        "title": "Traffic: Requests per Minute by Site",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "topk(20, sqcdy_site_requests_per_minute)",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqpm"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "calcs": ["lastNotNull", "max"]
          }
        }
      },
      {
        "title": "Traffic: MB per Minute by Site",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "topk(20, sqcdy_site_bytes_per_minute / 1024 / 1024)",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MBs"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "calcs": ["lastNotNull", "max"]
          }
        }
      },
      {
        "title": "Top IPs",
        "type": "table",
        "gridPos": {"h": 10, "w": 8, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "topk(20, sum by (ip) (sqcdy_site_top_ip_requests))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "ip": "IP Address",
                "Value": "Requests"
              }
            }
          }
        ]
      },
      {
        "title": "Top User Agents",
        "type": "table",
        "gridPos": {"h": 10, "w": 8, "x": 8, "y": 30},
        "targets": [
          {
            "expr": "topk(20, sum by (user_agent) (sqcdy_site_top_user_agent_requests))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "user_agent": "User Agent",
                "Value": "Requests"
              }
            }
          }
        ]
      },
      {
        "title": "Top URLs",
        "type": "table",
        "gridPos": {"h": 10, "w": 8, "x": 16, "y": 30},
        "targets": [
          {
            "expr": "topk(20, sum by (url) (sqcdy_site_top_url_requests))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "url": "URL",
                "Value": "Requests"
              }
            }
          }
        ]
      }
    ]
}
