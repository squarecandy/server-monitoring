{
  "title": "Square Candy - User Metrics",
  "uid": "sqcdy-user-metrics",
  "tags": ["squarecandy", "users", "linux"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 9,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "user",
          "type": "query",
          "query": "label_values(sqcdy_user_cpu_percent{user!~\"root|apache|psaadm|mysql\"}, user)",
          "current": {},
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "sort": 1
        }
      ]
    },
    "panels": [
      {
        "title": "CPU Usage - All Users",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sqcdy_user_cpu_percent{user=~\"$user\", user!~\"root|apache|psaadm|mysql\"}",
            "legendFormat": "{{user}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Memory Usage (GB) - All Users",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "(sqcdy_user_memory_bytes{user=~\"$user\"} / 1024 / 1024 / 1024)",
            "legendFormat": "{{user}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Process Count - All Users",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sqcdy_user_process_count{user=~\"$user\"}",
            "legendFormat": "{{user}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "title": "User Resource Summary",
        "type": "table",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "sqcdy_user_cpu_percent{user=~\"$user\", user!~\"root|apache|psaadm|mysql\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "max_over_time(sqcdy_user_cpu_percent{user=~\"$user\", user!~\"root|apache|psaadm|mysql\"}[$__range])",
            "format": "table",
            "instant": true,
            "refId": "B"
          },
          {
            "expr": "sqcdy_user_memory_bytes{user=~\"$user\", user!~\"root|apache|psaadm|mysql\"} / 1024 / 1024 / 1024",
            "format": "table",
            "instant": true,
            "refId": "C"
          },
          {
            "expr": "max_over_time(sqcdy_user_memory_bytes{user=~\"$user\", user!~\"root|apache|psaadm|mysql\"}[$__range]) / 1024 / 1024 / 1024",
            "format": "table",
            "instant": true,
            "refId": "D"
          }
        ],
        "transformations": [
          {
            "id": "merge"
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "instance": true,
                "job": true,
                "__name__": true
              },
              "indexByName": {
                "user": 0,
                "Value #A": 1,
                "Value #B": 2,
                "Value #C": 3,
                "Value #D": 4
              },
              "renameByName": {
                "user": "User",
                "Value #A": "Current CPU %",
                "Value #B": "Max CPU %",
                "Value #C": "Current Memory GB",
                "Value #D": "Max Memory GB"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [
                {
                  "field": "Max CPU %",
                  "desc": true
                }
              ]
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Max CPU %",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Current CPU %"},
              "properties": [{"id": "decimals", "value": 2}]
            },
            {
              "matcher": {"id": "byName", "options": "Max CPU %"},
              "properties": [{"id": "decimals", "value": 2}]
            },
            {
              "matcher": {"id": "byName", "options": "Current Memory GB"},
              "properties": [{"id": "decimals", "value": 2}]
            },
            {
              "matcher": {"id": "byName", "options": "Max Memory GB"},
              "properties": [{"id": "decimals", "value": 2}]
            }
          ]
        }
      }
    ]
}
