{
  "title": "Square Candy - User Metrics",
  "uid": "sqcdy-user-metrics",
  "tags": ["squarecandy", "users", "linux"],
  "links": [
    {"title": "Server Overview", "type": "link", "url": "/d/sqcdy-server-overview", "keepTime": true, "includeVars": true, "icon": "cloud"},
    {"title": "Site Metrics", "type": "link", "url": "/d/sqcdy-site-drilldown", "keepTime": true, "includeVars": true, "icon": "dashboard"},
    {"title": "User Metrics", "type": "link", "url": "/d/sqcdy-user-metrics", "keepTime": true, "includeVars": true, "icon": "info"},
    {"title": "Log Viewer", "type": "link", "url": "/d/sqcdy-log-viewer", "keepTime": true, "includeVars": true, "icon": "doc"}
  ],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 14,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "server",
          "type": "query",
          "query": "label_values(sqcdy_user_cpu_percent, instance)",
          "current": {},
          "refresh": 1,
          "includeAll": true,
          "multi": false,
          "sort": 1
        },
        {
          "name": "user",
          "type": "query",
          "query": "label_values(sqcdy_user_cpu_percent{instance=~\"$server\", user!~\"root|apache|psaadm|mysql|chrony|dbus|grafana.*|nginx|polkitd|plesk-s.*|sw-cp-s.*\"}, user)",
          "current": {},
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "sort": 1
        }
      ]
    },
    "panels": [
      {
        "title": "CPU Usage - All Users",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sqcdy_user_cpu_percent{instance=~\"$server\", user=~\"$user\", user!~\"root|apache|psaadm|mysql|chrony|dbus|grafana.*|nginx|polkitd|plesk-s.*|sw-cp-s.*\"}",
            "legendFormat": "{{user}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "spanNulls": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Memory Usage (GB) - All Users",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "(sqcdy_user_memory_bytes{instance=~\"$server\", user=~\"$user\", user!~\"root|apache|psaadm|mysql|chrony|dbus|grafana.*|nginx|polkitd|plesk-s.*|sw-cp-s.*\"} / 1024 / 1024 / 1024)",
            "legendFormat": "{{user}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "custom": {
              "spanNulls": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Process Count - All Users",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sqcdy_user_process_count{instance=~\"$server\", user=~\"$user\", user!~\"root|apache|psaadm|mysql|chrony|dbus|grafana.*|nginx|polkitd|plesk-s.*|sw-cp-s.*\"}",
            "legendFormat": "{{user}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "spanNulls": true
            }
          }
        }
      },
      {
        "title": "User Resource Summary",
        "type": "table",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "max_over_time(sqcdy_user_cpu_percent{instance=~\"$server\", user=~\"$user\", user!~\"root|apache|psaadm|mysql|chrony|dbus|grafana.*|nginx|polkitd|plesk-s.*|sw-cp-s.*\"}[$__range])",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "max_over_time(sqcdy_user_memory_bytes{instance=~\"$server\", user=~\"$user\", user!~\"root|apache|psaadm|mysql|chrony|dbus|grafana.*|nginx|polkitd|plesk-s.*|sw-cp-s.*\"}[$__range]) / 1024 / 1024 / 1024",
            "format": "table",
            "instant": true,
            "refId": "B"
          }
        ],
        "transformations": [
          {
            "id": "merge"
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "instance": true,
                "job": true,
                "__name__": true
              },
              "indexByName": {
                "user": 0,
                "Value #A": 1,
                "Value #B": 2
              },
              "renameByName": {
                "user": "User",
                "Value #A": "CPU %",
                "Value #B": "Memory GB"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [
                {
                  "field": "CPU %",
                  "desc": true
                }
              ]
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "CPU %",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "CPU %"},
              "properties": [{"id": "decimals", "value": 2}]
            },
            {
              "matcher": {"id": "byName", "options": "Memory GB"},
              "properties": [{"id": "decimals", "value": 2}]
            }
          ]
        }
      }
    ]
}
