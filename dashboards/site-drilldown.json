{
  "title": "Square Candy - Site Metrics",
  "uid": "sqcdy-site-drilldown",
  "tags": ["squarecandy", "sites"],
  "links": [
    {"title": "Server Overview", "type": "link", "url": "/d/sqcdy-server-overview", "keepTime": true, "includeVars": true, "icon": "cloud"},
    {"title": "User Metrics", "type": "link", "url": "/d/sqcdy-user-metrics", "keepTime": true, "includeVars": true, "icon": "info"},
	{"title": "Site Metrics", "type": "link", "url": "/d/sqcdy-site-drilldown", "keepTime": true, "includeVars": true, "icon": "dashboard"},
    {"title": "Log Viewer", "type": "link", "url": "/d/sqcdy-log-viewer", "keepTime": true, "includeVars": true, "icon": "doc"}
  ],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 14,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "server",
          "type": "query",
          "query": "label_values(sqcdy_sites_total, instance)",
          "current": {},
          "refresh": 1,
          "includeAll": true,
          "multi": false,
          "sort": 1
        },
        {
          "name": "domain",
          "type": "query",
          "query": "label_values(sqcdy_site_disk_bytes{instance=~\"$server\"}, domain)",
          "current": {},
          "refresh": 1,
          "includeAll": true,
          "multi": false,
          "allValue": ".*",
          "sort": 1
        }
      ]
    },
    "panels": [
      {
        "title": "Disk Utilization (GB)",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sqcdy_site_disk_bytes{instance=~\"$server\", domain=~\"$domain\"} / 1024 / 1024 / 1024",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Traffic: Requests per Minute",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(sqcdy_site_requests_per_minute{instance=~\"$server\", domain=~\"$domain\"}[$__rate_interval])",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqpm"
          }
        }
      },
      {
        "title": "Traffic: MB per Minute",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "rate(sqcdy_site_bytes_per_minute{instance=~\"$server\", domain=~\"$domain\"}[$__rate_interval]) / 1024 / 1024",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MBs"
          }
        }
      },
      {
        "title": "HTTP Status Codes Over Time",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 10},
        "targets": [
          {
            "expr": "sum(rate(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"2..\"}[$__rate_interval]))",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "sum(rate(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"3..\"}[$__rate_interval]))",
            "legendFormat": "3xx Redirect",
            "refId": "B"
          },
          {
            "expr": "sum(rate(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"4..\"}[$__rate_interval]))",
            "legendFormat": "4xx Client Error",
            "refId": "C"
          },
          {
            "expr": "sum(rate(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"5..\"}[$__rate_interval]))",
            "legendFormat": "5xx Server Error",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "fillOpacity": 10,
              "spanNulls": true
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "4xx Client Error"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}]
            },
            {
              "matcher": {"id": "byName", "options": "5xx Server Error"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            }
          ]
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "title": "Status Code Distribution %",
        "type": "stat",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "(100 * sum(increase(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"2..\"}[$__range])) / sum(increase(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\"}[$__range]))) or vector(0)",
            "legendFormat": "2xx",
            "refId": "A"
          },
          {
            "expr": "(100 * sum(increase(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"3..\"}[$__range])) / sum(increase(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\"}[$__range]))) or vector(0)",
            "legendFormat": "3xx",
            "refId": "B"
          },
          {
            "expr": "(100 * sum(increase(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"4..\"}[$__range])) / sum(increase(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\"}[$__range]))) or vector(0)",
            "legendFormat": "4xx",
            "refId": "C"
          },
          {
            "expr": "(100 * sum(increase(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"5..\"}[$__range])) / sum(increase(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\"}[$__range]))) or vector(0)",
            "legendFormat": "5xx",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "noValue": "0",
            "links": [
              {
                "title": "View ${__field.displayName} logs",
                "url": "/d/sqcdy-log-viewer?var-server=${server}&var-domain=${domain}&var-status=${__field.displayName}"
              }
            ]
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "2xx"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}},
                {"id": "thresholds", "value": {"mode": "absolute", "steps": [{"value": 0, "color": "green"}]}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "3xx"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}},
                {"id": "thresholds", "value": {"mode": "absolute", "steps": [{"value": 0, "color": "blue"}]}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "4xx"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}},
                {"id": "thresholds", "value": {"mode": "absolute", "steps": [{"value": 0, "color": "orange"}]}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "5xx"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}},
                {"id": "thresholds", "value": {"mode": "absolute", "steps": [{"value": 0, "color": "red"}]}}
              ]
            }
          ]
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "textMode": "value_and_name",
          "orientation": "vertical",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "text": {
            "titleSize": 16,
            "valueSize": 28
          }
        }
      },
      {
        "title": "Top URLs by Request Count",
        "type": "table",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "topk(10, ceil(sum by (domain, url) (increase(sqcdy_site_top_url_requests{instance=~\"$server\", domain=~\"$domain\"}[$__range]))) > 0)",
            "format": "table",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "decimals": 0
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "URL"},
              "properties": [
                {
                  "id": "custom.width",
                  "value": 350
                },
                {
                  "id": "links",
                  "value": [
                    {
                      "title": "View Logs",
                      "url": "/d/sqcdy-log-viewer?var-server=${server}&var-domain=${__data.fields.Domain}&var-search=${__data.fields.URL:percentencode}&${__url_time_range}"
                    },
                    {
                      "title": "Open URL",
                      "url": "https://${__data.fields.Domain}${__data.fields.URL}",
                      "targetBlank": true
                    }
                  ]
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                },
                "domain": {
                  "aggregations": [],
                  "operation": "groupby"
                },
                "url": {
                  "aggregations": [],
                  "operation": "groupby"
                }
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true, "job": true},
              "renameByName": {
                "domain": "Domain",
                "url": "URL",
                "Value (lastNotNull)": "Requests"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Requests",
                  "desc": true
                }
              ]
            }
          }
        ],
        "options": {
          "showHeader": true,
          "footer": {
            "show": false
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "URL"},
            "properties": [
              {
                "id": "custom.width",
                "value": 400
              },
              {
                "id": "links",
                "value": [
                  {
                    "title": "View logs",
                    "url": "/d/sqcdy-log-viewer?var-server=${__data.fields.Domain}&var-domain=${__data.fields.Domain}&var-search=${__data.fields.URL:percentencode}"
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "title": "Top IPs",
        "type": "table",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "topk(20, ceil(sum by (ip) (increase(sqcdy_site_top_ip_requests{instance=~\"$server\", domain=~\"$domain\"}[$__range]))) > 0)",
            "format": "table",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "decimals": 0
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "IP Address"},
              "properties": [
                {
                  "id": "links",
                  "value": [
                    {
                      "title": "View Logs",
                      "url": "/d/sqcdy-log-viewer?var-server=${server}&var-domain=${domain}&var-search=${__data.fields['IP Address']:percentencode}&${__url_time_range}"
                    }
                  ]
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                },
                "ip": {
                  "aggregations": [],
                  "operation": "groupby"
                }
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true, "job": true},
              "renameByName": {
                "ip": "IP Address",
                "Value (lastNotNull)": "Requests"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Requests",
                  "desc": true
                }
              ]
            }
          }
        ],
        "options": {
          "showHeader": true
        }
      },
      {
        "title": "Top User Agents",
        "type": "table",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "topk(20, ceil(sum by (user_agent) (increase(sqcdy_site_top_user_agent_requests{instance=~\"$server\", domain=~\"$domain\"}[$__range]))) > 0)",
            "format": "table",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "decimals": 0
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "User Agent"},
              "properties": [
                {
                  "id": "custom.width",
                  "value": 400
                },
                {
                  "id": "links",
                  "value": [
                    {
                      "title": "View Logs",
                      "url": "/d/sqcdy-log-viewer?var-server=${server}&var-domain=${domain}&var-search=${__data.fields['User Agent']:percentencode}&${__url_time_range}"
                    }
                  ]
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                },
                "user_agent": {
                  "aggregations": [],
                  "operation": "groupby"
                }
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true, "job": true},
              "renameByName": {
                "user_agent": "User Agent",
                "Value (lastNotNull)": "Requests"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Requests",
                  "desc": true
                }
              ]
            }
          }
        ],
        "options": {
          "showHeader": true
        }
      }
    ]
}
