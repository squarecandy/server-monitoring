{
  "title": "Square Candy - Site Metrics",
  "uid": "sqcdy-site-drilldown",
  "tags": ["squarecandy", "sites"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 11,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "server",
          "type": "query",
          "query": "label_values(sqcdy_site_disk_bytes, instance)",
          "current": {},
          "refresh": 1,
          "includeAll": true,
          "multi": false,
          "sort": 1
        },
        {
          "name": "domain",
          "type": "query",
          "query": "label_values(sqcdy_site_disk_bytes{instance=~\"$server\"}, domain)",
          "current": {},
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "sort": 1
        }
      ]
    },
    "panels": [
      {
        "title": "Disk Utilization (GB)",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sqcdy_site_disk_bytes{instance=~\"$server\", domain=~\"$domain\"} / 1024 / 1024 / 1024",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Traffic: Requests per Minute",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(sqcdy_site_requests_per_minute{instance=~\"$server\", domain=~\"$domain\"}[5m])",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqpm"
          }
        }
      },
      {
        "title": "Traffic: MB per Minute",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(sqcdy_site_bytes_per_minute{instance=~\"$server\", domain=~\"$domain\"}[5m]) / 1024 / 1024",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MBs"
          }
        }
      },
      {
        "title": "Top IPs",
        "type": "table",
        "gridPos": {"h": 10, "w": 8, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "topk(20, sum by (ip) (sqcdy_site_top_ip_requests{instance=~\"$server\", domain=~\"$domain\"}))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                },
                "ip": {
                  "aggregations": [],
                  "operation": "groupby"
                }
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true, "job": true},
              "renameByName": {
                "ip": "IP Address",
                "Value (lastNotNull)": "Requests"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Requests",
                  "desc": true
                }
              ]
            }
          }
        ]
      },
      {
        "title": "Top User Agents",
        "type": "table",
        "gridPos": {"h": 10, "w": 8, "x": 8, "y": 24},
        "targets": [
          {
            "expr": "topk(20, sum by (user_agent) (sqcdy_site_top_user_agent_requests{instance=~\"$server\", domain=~\"$domain\"}))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                },
                "user_agent": {
                  "aggregations": [],
                  "operation": "groupby"
                }
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true, "job": true},
              "renameByName": {
                "user_agent": "User Agent",
                "Value (lastNotNull)": "Requests"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Requests",
                  "desc": true
                }
              ]
            }
          }
        ]
      },
      {
        "title": "Top URLs",
        "type": "table",
        "gridPos": {"h": 10, "w": 8, "x": 16, "y": 24},
        "targets": [
          {
            "expr": "topk(20, sum by (url) (sqcdy_site_top_url_requests{instance=~\"$server\", domain=~\"$domain\"}))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                },
                "url": {
                  "aggregations": [],
                  "operation": "groupby"
                }
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true, "job": true},
              "renameByName": {
                "url": "URL",
                "Value (lastNotNull)": "Requests"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Requests",
                  "desc": true
                }
              ]
            }
          }
        ]
      },
      {
        "title": "HTTP Status Codes",
        "type": "piechart",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 26},
        "targets": [
          {
            "expr": "sum by (status) (sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\"})",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "calcs": ["lastNotNull"]
          }
        }
      }
    ]
}
