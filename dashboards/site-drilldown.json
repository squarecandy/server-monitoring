{
  "title": "Square Candy - Site Metrics",
  "uid": "sqcdy-site-drilldown",
  "tags": ["squarecandy", "sites"],
  "links": [
    {"title": "Server Overview", "type": "link", "url": "/d/sqcdy-server-overview", "keepTime": true, "includeVars": true, "icon": "cloud"},
    {"title": "Site Metrics", "type": "link", "url": "/d/sqcdy-site-drilldown", "keepTime": true, "includeVars": true, "icon": "dashboard"},
    {"title": "User Metrics", "type": "link", "url": "/d/sqcdy-user-metrics", "keepTime": true, "includeVars": true, "icon": "info"},
    {"title": "Log Viewer", "type": "link", "url": "/d/sqcdy-log-viewer", "keepTime": true, "includeVars": true, "icon": "doc"}
  ],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 14,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "server",
          "type": "query",
          "query": "label_values(sqcdy_site_disk_bytes, instance)",
          "current": {},
          "refresh": 1,
          "includeAll": true,
          "multi": false,
          "sort": 1
        },
        {
          "name": "domain",
          "type": "query",
          "query": "label_values(sqcdy_site_disk_bytes{instance=~\"$server\"}, domain)",
          "current": {},
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "sort": 1
        }
      ]
    },
    "panels": [
      {
        "title": "Disk Utilization (GB)",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sqcdy_site_disk_bytes{instance=~\"$server\", domain=~\"$domain\"} / 1024 / 1024 / 1024",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Traffic: Requests per Minute",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(sqcdy_site_requests_per_minute{instance=~\"$server\", domain=~\"$domain\"}[5m])",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqpm"
          }
        }
      },
      {
        "title": "Traffic: MB per Minute",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(sqcdy_site_bytes_per_minute{instance=~\"$server\", domain=~\"$domain\"}[5m]) / 1024 / 1024",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MBs"
          }
        }
      },
      {
        "title": "HTTP Status Codes Over Time",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "sum by (status) (rate(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"2..\"}[5m]))",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "sum by (status) (rate(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"3..\"}[5m]))",
            "legendFormat": "3xx Redirect",
            "refId": "B"
          },
          {
            "expr": "sum by (status) (rate(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"4..\"}[5m]))",
            "legendFormat": "4xx Client Error",
            "refId": "C"
          },
          {
            "expr": "sum by (status) (rate(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"5..\"}[5m]))",
            "legendFormat": "5xx Server Error",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "fillOpacity": 10,
              "spanNulls": true
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "4xx Client Error"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}]
            },
            {
              "matcher": {"id": "byName", "options": "5xx Server Error"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            }
          ]
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "title": "Error Rate %",
        "type": "stat",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "(100 * sum(rate(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\", status=~\"[45]..\"}[5m])) / sum(rate(sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\"}[5m]))) or vector(0)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "orange"},
                {"value": 10, "color": "red"}
              ]
            },
            "noValue": "0"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "auto"
        }
      },
      {
        "title": "Top Error URLs (4xx/5xx)",
        "type": "table",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 22},
        "targets": [
          {
            "expr": "topk(10, sum by (domain, url) (increase(sqcdy_site_top_url_requests{instance=~\"$server\", domain=~\"$domain\"}[$__range])))",
            "format": "table",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "decimals": 0
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "URL"},
              "properties": [
                {
                  "id": "links",
                  "value": [
                    {
                      "title": "Open URL",
                      "url": "https://${__data.fields.domain}${__data.fields.url}",
                      "targetBlank": true
                    }
                  ]
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                },
                "domain": {
                  "aggregations": [],
                  "operation": "groupby"
                },
                "url": {
                  "aggregations": [],
                  "operation": "groupby"
                }
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true, "job": true},
              "renameByName": {
                "domain": "Domain",
                "url": "URL",
                "Value (lastNotNull)": "Errors"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Errors",
                  "desc": true
                }
              ]
            }
          }
        ]
      },
      {
        "title": "Top IPs",
        "type": "table",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "topk(20, sum by (ip) (sqcdy_site_top_ip_requests{instance=~\"$server\", domain=~\"$domain\"}))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                },
                "ip": {
                  "aggregations": [],
                  "operation": "groupby"
                }
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true, "job": true},
              "renameByName": {
                "ip": "IP Address",
                "Value (lastNotNull)": "Requests"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Requests",
                  "desc": true
                }
              ]
            }
          }
        ]
      },
      {
        "title": "Top User Agents",
        "type": "table",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "topk(20, sum by (user_agent) (sqcdy_site_top_user_agent_requests{instance=~\"$server\", domain=~\"$domain\"}))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                },
                "user_agent": {
                  "aggregations": [],
                  "operation": "groupby"
                }
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true, "job": true},
              "renameByName": {
                "user_agent": "User Agent",
                "Value (lastNotNull)": "Requests"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Requests",
                  "desc": true
                }
              ]
            }
          }
        ]
      },
      {
        "title": "Top URLs",
        "type": "table",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 24},
        "fieldConfig": {
          "defaults": {
            "decimals": 0
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "URL"},
              "properties": [
                {
                  "id": "links",
                  "value": [
                    {
                      "title": "Open URL",
                      "url": "https://${__data.fields.domain}${__data.fields.url}",
                      "targetBlank": true
                    }
                  ]
                }
              ]
            }
          ]
        },
        "targets": [
          {
            "expr": "topk(20, sum by (domain, url) (sqcdy_site_top_url_requests{instance=~\"$server\", domain=~\"$domain\"}))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                },
                "domain": {
                  "aggregations": [],
                  "operation": "groupby"
                },
                "url": {
                  "aggregations": [],
                  "operation": "groupby"
                }
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true, "job": true},
              "renameByName": {
                "domain": "Domain",
                "url": "URL",
                "Value (lastNotNull)": "Requests"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Requests",
                  "desc": true
                }
              ]
            }
          }
        ]
      },
      {
        "title": "HTTP Status Codes",
        "type": "piechart",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "sum by (status) (sqcdy_site_status_code_total{instance=~\"$server\", domain=~\"$domain\"})",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "calcs": ["lastNotNull"]
          }
        }
      }
    ]
}
